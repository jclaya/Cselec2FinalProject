<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User ID" />

        <Spinner
            android:id="@+id/user_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/user_new_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Value"
            android:inputType="text" />

        <Button
            android:id="@+id/update_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f76ff"
            android:text="Update User"
            android:textColor="#fff" />




        <EditText
            android:id="@+id/book_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book ID" />

        <Spinner
            android:id="@+id/book_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/book_new_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Value"
            android:inputType="text" />
        <Button
            android:id="@+id/update_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f76ff"
            android:text="Update Book"
            android:textColor="#fff" />

    </LinearLayout>


</RelativeLayout>